<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFaultException">
    <DisplayName>RaiseFault.Exception</DisplayName>
    <Properties/>
    <FaultResponse>
        <Set>
            <Payload contentType="text/xml">
                <error>
                    <message>{wssec_exception}</message>
                </error>
            </Payload>
            <StatusCode>400</StatusCode>
            <ReasonPhrase>{wssec_exception}</ReasonPhrase>
        </Set>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>